<style>
    /* Airbnb Color Variables (if not in head) */
    .text-airbnb-red {
        color: #FF5A5F;
    }
    
    /* Gradient Background */
    .airbnb-gradient-bg {
        background: linear-gradient(135deg, #FFF5F5 0%, #FFFFFF 50%, #FFF0F0 100%);
        min-height: 100vh;
    }
    
    /* Typography */
    .airbnb-title {
        color: #222222;
        font-weight: 600;
        letter-spacing: -0.02em;
    }
    
    .airbnb-subtitle {
        color: #717171;
        font-weight: 400;
    }
    
    /* Card */
    .airbnb-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        border: 1px solid #DDDDDD;
        transition: all 0.2s ease;
    }
    
    .airbnb-card:hover {
        box-shadow: 0 8px 28px rgba(0, 0, 0, 0.12);
    }
    
    /* Primary Button */
    .airbnb-btn-primary {
        background: linear-gradient(135deg, #FF5A5F 0%, #FF385C 100%);
        color: white;
        font-weight: 600;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
        box-shadow: 0 2px 8px rgba(255, 90, 95, 0.3);
        text-decoration: none;
    }
    
    .airbnb-btn-primary:hover {
        background: linear-gradient(135deg, #E00007 0%, #E31C5F 100%);
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(255, 90, 95, 0.4);
    }
    
    /* Secondary Button */
    .airbnb-btn-secondary {
        background: white;
        color: #222222;
        border: 1px solid #DDDDDD;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s ease;
    }
    
    .airbnb-btn-secondary:hover {
        border-color: #222222;
        background: #F7F7F7;
    }
</style>