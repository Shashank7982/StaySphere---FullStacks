<%- include('../partials/head') %>
</head>
<body class="airbnb-bg min-h-screen font-sans">
    <%- include('../partials/nav')%>

    <main class="container mx-auto px-4 sm:px-6 py-8 mt-6 max-w-7xl">
        <!-- Page Header -->
        <div class="mb-10">
            <h1 class="text-3xl sm:text-4xl airbnb-title mb-2">Saved</h1>
            <p class="airbnb-subtitle text-lg">Your favorite places, all in one place</p>
        </div>

        <!-- Empty State (show when no favorites) -->
        <% if (!favouriteHomes || favouriteHomes.length === 0) { %>
        <div class="max-w-md mx-auto airbnb-card p-12 text-center">
            <div class="mx-auto w-20 h-20 bg-gradient-to-br from-red-50 to-pink-50 rounded-full flex items-center justify-center mb-6">
                <svg class="w-10 h-10 text-airbnb-red" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                </svg>
            </div>
            <h2 class="text-2xl font-semibold text-gray-900 mb-3">No saved homes yet</h2>
            <p class="text-gray-500 mb-8">Start exploring and save places you love</p>
            <a href="/store/homes" class="airbnb-btn-primary inline-flex items-center justify-center px-8 py-4">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
                Explore homes
            </a>
        </div>
        <% } else { %>

        <!-- Cards Grid -->
        <div class="airbnb-grid">
            <%favouriteHomes.forEach((home)=>{%>
            <!-- Single Card -->
            <article class="airbnb-property-card group">
                <div class="airbnb-image-container">
                    <img src="<%=home.photo%>" alt="<%=home.houseName%>" loading="lazy">
                    
                    <!-- Rating Badge -->
                    <div class="airbnb-rating">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.539 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.8-2.034c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                        <span><%=home.rating%></span>
                    </div>
                    
                    <!-- Saved Heart Badge -->
                    <div class="absolute top-3 left-3">
                        <div class="w-8 h-8 bg-white rounded-full flex items-center justify-center shadow-md">
                            <svg class="w-5 h-5 text-airbnb-red" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                            </svg>
                        </div>
                    </div>
                    
                    <!-- Remove Button (appears on hover) -->
                    <form action="/store/favourites/delete/<%=home._id%>" method="POST" 
                          class="absolute top-3 right-3 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                        <button type="submit" 
                                class="w-8 h-8 bg-white hover:bg-gray-100 rounded-full flex items-center justify-center shadow-md transition-colors"
                                onclick="return confirm('Remove from saved?')"
                                title="Remove from favorites">
                            <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                            </svg>
                        </button>
                    </form>
                </div>
                
                <div class="airbnb-card-content">
                    <h3 class="airbnb-property-title"><%=home.houseName%></h3>
                    
                    <div class="airbnb-location">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                        </svg>
                        <span><%=home.location%></span>
                    </div>
                    
                    <div class="airbnb-price-row">
                        <span class="airbnb-price">â‚¹<%=home.price%></span>
                        <span class="airbnb-price-unit">/ night</span>
                    </div>
                    
                    <!-- Book Now Button -->
                    <a href="/store/homes/<%=home._id%>" class="airbnb-btn-primary w-full text-center justify-center py-3 text-sm">
                        View Details
                    </a>
                </div>
            </article>
            <%})%>
        </div>
        <% } %>
    </main>
    
</body>
</html>

<style>
    /* Airbnb Color Variables */
    :root {
        --airbnb-red: #FF5A5F;
        --airbnb-dark-red: #E00007;
        --airbnb-pink: #FF385C;
        --airbnb-text: #222222;
        --airbnb-gray: #717171;
        --airbnb-light-gray: #F7F7F7;
        --airbnb-border: #DDDDDD;
    }
    
    .text-airbnb-red {
        color: var(--airbnb-red);
    }
    
    /* Background */
    .airbnb-bg {
        background-color: #FFFFFF;
    }
    
    /* Typography */
    .airbnb-title {
        color: var(--airbnb-text);
        font-weight: 600;
        letter-spacing: -0.02em;
    }
    
    .airbnb-subtitle {
        color: var(--airbnb-gray);
        font-weight: 400;
    }
    
    /* Card */
    .airbnb-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        border: 1px solid var(--airbnb-border);
    }
    
    /* Grid */
    .airbnb-grid {
        display: grid;
        gap: 24px;
        grid-template-columns: repeat(1, 1fr);
    }
    
    @media (min-width: 640px) {
        .airbnb-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
    
    @media (min-width: 1024px) {
        .airbnb-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }
    
    @media (min-width: 1280px) {
        .airbnb-grid {
            grid-template-columns: repeat(4, 1fr);
        }
    }
    
    /* Property Card */
    .airbnb-property-card {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid var(--airbnb-border);
        transition: all 0.3s ease;
    }
    
    .airbnb-property-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
    }
    
    /* Image Container */
    .airbnb-image-container {
        position: relative;
        height: 240px;
        overflow: hidden;
    }
    
    .airbnb-image-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }
    
    .airbnb-property-card:hover .airbnb-image-container img {
        transform: scale(1.05);
    }
    
    /* Rating Badge */
    .airbnb-rating {
        position: absolute;
        top: 12px;
        right: 12px;
        background: white;
        padding: 6px 10px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        gap: 4px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.12);
        font-weight: 600;
        font-size: 14px;
    }
    
    .airbnb-rating svg {
        color: var(--airbnb-red);
    }
    
    /* Card Content */
    .airbnb-card-content {
        padding: 16px;
    }
    
    .airbnb-property-title {
        font-size: 18px;
        font-weight: 600;
        color: var(--airbnb-text);
        margin-bottom: 8px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    
    .airbnb-location {
        display: flex;
        align-items: center;
        color: var(--airbnb-gray);
        font-size: 14px;
        margin-bottom: 12px;
        gap: 6px;
    }
    
    /* Price */
    .airbnb-price-row {
        display: flex;
        align-items: baseline;
        margin-bottom: 16px;
    }
    
    .airbnb-price {
        font-size: 18px;
        font-weight: 600;
        color: var(--airbnb-text);
    }
    
    .airbnb-price-unit {
        color: var(--airbnb-gray);
        font-size: 14px;
        margin-left: 4px;
    }
    
    /* Buttons */
    .airbnb-btn-primary {
        display: inline-flex;
        align-items: center;
        background: linear-gradient(135deg, var(--airbnb-red) 0%, var(--airbnb-pink) 100%);
        color: white;
        font-weight: 600;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
        box-shadow: 0 2px 8px rgba(255, 90, 95, 0.3);
        text-decoration: none;
    }
    
    .airbnb-btn-primary:hover {
        background: linear-gradient(135deg, var(--airbnb-dark-red) 0%, #E31C5F 100%);
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(255, 90, 95, 0.4);
    }
</style>