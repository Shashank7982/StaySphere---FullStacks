<header class="airbnb-header sticky top-0 z-50">
    <nav class="container mx-auto px-4 sm:px-6 py-4">
        <div class="flex justify-between items-center">
            <!-- Logo/Brand -->
            <div class="flex items-center">
                <a href="/store" class="airbnb-logo flex items-center gap-2">
                    <svg class="w-8 h-8" viewBox="0 0 32 32" fill="currentColor">
                        <path
                            d="M16 22c1.5 0 2.8-.6 3.8-1.6 1-1 1.6-2.3 1.6-3.8 0-1.5-.6-2.8-1.6-3.8-1-1-2.3-1.6-3.8-1.6-1.5 0-2.8.6-3.8 1.6-1 1-1.6 2.3-1.6 3.8 0 1.5.6 2.8 1.6 3.8 1 1 2.3 1.6 3.8 1.6zm0 2c-3.3 0-6-2.7-6-6 0-1.8.8-3.4 2-4.5V8c0-2.2 1.8-4 4-4s4 1.8 4 4v5.5c1.2 1.1 2 2.7 2 4.5 0 3.3-2.7 6-6 6z" />
                        <circle cx="16" cy="8" r="2" />
                    </svg>
                    <span class="text-xl font-bold tracking-tight">StaySphere</span>
                </a>
            </div>

            <!-- Search Bar (Desktop) -->
            <div class="hidden lg:flex flex-1 justify-center max-w-2xl mx-8">
                <form action="/store/search" method="GET" class="airbnb-search-bar">
                    <div class="airbnb-search-input-group">
                        <div class="airbnb-search-input">
                            <label class="airbnb-search-label">Where</label>
                            <input type="text" name="location" placeholder="Search destinations"
                                class="airbnb-search-field">
                        </div>
                        <div class="airbnb-search-divider"></div>
                        <div class="airbnb-search-input">
                            <label class="airbnb-search-label">Check in</label>
                            <input type="text" name="checkin" placeholder="Add dates" class="airbnb-search-field">
                        </div>
                        <div class="airbnb-search-divider"></div>
                        <div class="airbnb-search-input">
                            <label class="airbnb-search-label">Check out</label>
                            <input type="text" name="checkout" placeholder="Add dates" class="airbnb-search-field">
                        </div>
                        <div class="airbnb-search-divider"></div>
                        <div class="airbnb-search-input flex-1">
                            <label class="airbnb-search-label">Who</label>
                            <input type="text" name="guests" placeholder="Add guests" class="airbnb-search-field">
                        </div>
                        <button type="submit" class="airbnb-search-button">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                            </svg>
                            <span class="hidden xl:inline ml-1">Search</span>
                        </button>
                    </div>
                </form>
            </div>

            <!-- Desktop Navigation -->
            <div class="hidden md:flex items-center gap-1">
                <% if(isLoggedIn==true) { %>
                    <%if(user&&user.userType=='guest'){%>
                        <a href="/store/homes"
                            class="<%= currentPage === 'home' ? 'airbnb-nav-active' : 'airbnb-nav-link' %>">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                            </svg>
                            <span>Homes</span>
                        </a>
                        <a href="/store/favourites"
                            class="<%= currentPage === 'favourites' ? 'airbnb-nav-active' : 'airbnb-nav-link' %>">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                            </svg>
                            <span>Saved</span>
                        </a>
                        <a href="/store/bookings"
                            class="<%= currentPage === 'bookings' ? 'airbnb-nav-active' : 'airbnb-nav-link' %>">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            <span>Trips</span>
                        </a>
                        <%}else{%>
                            <a href="/host/hostHomeList"
                                class="<%= currentPage === 'hostHomes' ? 'airbnb-nav-active' : 'airbnb-nav-link' %>">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                </svg>
                                <span>Dashboard</span>
                            </a>
                            <a href="/host/addHome"
                                class="<%= currentPage === 'addHome' ? 'airbnb-nav-active' : 'airbnb-nav-link' %>">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                                </svg>
                                <span>List Home</span>
                            </a>
                            <%}%>

                                <!-- User Menu Dropdown -->
                                <div class="relative ml-2">
                                    <button id="user-menu-button"
                                        class="airbnb-user-menu flex items-center gap-2 p-2 rounded-full border border-gray-200 hover:shadow-md transition-all duration-200">
                                        <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor"
                                            viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M4 6h16M4 12h16M4 18h16" />
                                        </svg>
                                        <div
                                            class="w-8 h-8 bg-gray-500 rounded-full flex items-center justify-center text-white text-sm font-semibold">
                                            <%= user.firstName ? user.firstName.charAt(0).toUpperCase() : 'U' %>
                                        </div>
                                    </button>

                                    <!-- Dropdown Menu -->
                                    <div id="user-dropdown"
                                        class="hidden absolute right-0 mt-2 w-48 bg-white rounded-xl shadow-lg border border-gray-200 py-2 z-50">
                                        <div class="px-4 py-2 border-b border-gray-100">
                                            <p class="text-sm font-semibold text-gray-900">
                                                <%= user.firstName || 'User' %>
                                            </p>
                                            <p class="text-xs text-gray-500">
                                                <%= user.email || '' %>
                                            </p>
                                        </div>
                                        <form action="/auth/logOut" method="POST">
                                            <button type="submit"
                                                class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 flex items-center gap-2">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                                                </svg>
                                                Log out
                                            </button>
                                        </form>
                                    </div>
                                </div>
                                <% } else { %>
                                    <a href="/auth/login" class="airbnb-nav-link">
                                        <span>Log in</span>
                                    </a>
                                    <a href="/auth/signup" class="airbnb-btn-primary text-sm py-2 px-4">
                                        Sign up
                                    </a>
                                    <% } %>
            </div>

            <!-- Mobile menu button -->
            <div class="md:hidden">
                <button id="mobile-menu-button"
                    class="p-2 rounded-lg text-gray-600 hover:bg-gray-100 transition-colors">
                    <svg id="menu-icon" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-gray-100 pt-4">
            <!-- Mobile Search -->
            <form action="/store/search" method="GET" class="mb-4">
                <div class="airbnb-mobile-search-btn">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                    <input type="text" name="location" placeholder="Where are you going?"
                        class="flex-1 border-none outline-none text-sm bg-transparent">
                </div>
            </form>

            <div class="flex flex-col gap-2">
                <% if(isLoggedIn==true) { %>
                    <%if(user&&user.userType=='guest'){%>
                        <a href="/store/homes"
                            class="<%= currentPage === 'home' ? 'airbnb-mobile-active' : 'airbnb-mobile-link' %>">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                            </svg>
                            Homes
                        </a>
                        <a href="/store/favourites"
                            class="<%= currentPage === 'favourites' ? 'airbnb-mobile-active' : 'airbnb-mobile-link' %>">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                            </svg>
                            Saved
                        </a>
                        <a href="/store/bookings"
                            class="<%= currentPage === 'bookings' ? 'airbnb-mobile-active' : 'airbnb-mobile-link' %>">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            Trips
                        </a>
                        <% } else { %>
                            <a href="/host/hostHomeList"
                                class="<%= currentPage === 'hostHomes' ? 'airbnb-mobile-active' : 'airbnb-mobile-link' %>">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                </svg>
                                Dashboard
                            </a>
                            <a href="/host/addHome"
                                class="<%= currentPage === 'addHome' ? 'airbnb-mobile-active' : 'airbnb-mobile-link' %>">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                                </svg>
                                List Home
                            </a>
                            <%}%>
                                <div class="border-t border-gray-100 my-2"></div>
                                <form action="/auth/logOut" method="POST" class="w-full">
                                    <button type="submit" class="airbnb-mobile-link w-full text-left text-red-600">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                                        </svg>
                                        Log out
                                    </button>
                                </form>
                                <% } else { %>
                                    <a href="/auth/login" class="airbnb-mobile-link">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
                                        </svg>
                                        Log in
                                    </a>
                                    <a href="/auth/signup" class="airbnb-btn-primary text-center justify-center mt-2">
                                        Sign up
                                    </a>
                                    <% } %>
            </div>
        </div>
    </nav>
</header>

<style>
    /* Airbnb Header Styles */
    .airbnb-header {
        background: white;
        border-bottom: 1px solid var(--airbnb-border, #DDDDDD);
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.08);
    }

    /* Logo */
    .airbnb-logo {
        color: var(--airbnb-red, #FF5A5F);
        transition: transform 0.2s ease;
    }

    .airbnb-logo:hover {
        transform: scale(1.02);
    }

    /* Navigation Links */
    .airbnb-nav-link {
        display: flex;
        align-items: center;
        gap: 6px;
        padding: 10px 16px;
        color: var(--airbnb-text, #222222);
        font-weight: 500;
        font-size: 14px;
        border-radius: 22px;
        transition: all 0.2s ease;
        text-decoration: none;
    }

    .airbnb-nav-link:hover {
        background-color: var(--airbnb-hover, #F7F7F7);
    }

    /* Active Navigation */
    .airbnb-nav-active {
        display: flex;
        align-items: center;
        gap: 6px;
        padding: 10px 16px;
        color: var(--airbnb-red, #FF5A5F);
        font-weight: 600;
        font-size: 14px;
        border-radius: 22px;
        background-color: #FFF8F8;
        text-decoration: none;
    }

    /* Primary Button */
    .airbnb-btn-primary {
        display: inline-flex;
        align-items: center;
        background: linear-gradient(135deg, var(--airbnb-red, #FF5A5F) 0%, var(--airbnb-pink, #FF385C) 100%);
        color: white;
        font-weight: 600;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
        box-shadow: 0 2px 4px rgba(255, 90, 95, 0.3);
    }

    .airbnb-btn-primary:hover {
        background: linear-gradient(135deg, var(--airbnb-dark-red, #E00007) 0%, #E31C5F 100%);
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(255, 90, 95, 0.4);
    }

    /* User Menu */
    .airbnb-user-menu {
        background: white;
    }

    /* Mobile Links */
    .airbnb-mobile-link {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 16px;
        color: var(--airbnb-text, #222222);
        font-weight: 500;
        border-radius: 8px;
        transition: background 0.2s ease;
        text-decoration: none;
    }

    .airbnb-mobile-link:hover {
        background-color: var(--airbnb-hover, #F7F7F7);
    }

    .airbnb-mobile-active {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 16px;
        color: var(--airbnb-red, #FF5A5F);
        font-weight: 600;
        border-radius: 8px;
        background-color: #FFF8F8;
        text-decoration: none;
    }

    /* Search Bar Styles */
    .airbnb-search-bar {
        width: 100%;
        max-width: 850px;
    }

    .airbnb-search-input-group {
        display: flex;
        align-items: center;
        background: white;
        border: 1px solid var(--airbnb-border, #DDDDDD);
        border-radius: 40px;
        padding: 4px 4px 4px 24px;
        transition: all 0.2s ease;
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.08);
    }

    .airbnb-search-input-group:hover {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.12);
    }

    .airbnb-search-input-group:focus-within {
        box-shadow: 0 3px 12px rgba(0, 0, 0, 0.15);
    }

    .airbnb-search-input {
        display: flex;
        flex-direction: column;
        padding: 8px 16px;
        min-width: 0;
        flex: 1;
    }

    .airbnb-search-label {
        font-size: 12px;
        font-weight: 600;
        color: var(--airbnb-text, #222222);
        margin-bottom: 2px;
    }

    .airbnb-search-field {
        border: none;
        outline: none;
        font-size: 14px;
        color: var(--airbnb-gray, #717171);
        background: transparent;
        width: 100%;
    }

    .airbnb-search-field::placeholder {
        color: var(--airbnb-gray, #717171);
    }

    .airbnb-search-divider {
        width: 1px;
        height: 32px;
        background-color: var(--airbnb-border, #DDDDDD);
    }

    .airbnb-search-button {
        background: linear-gradient(135deg, var(--airbnb-red, #FF5A5F) 0%, var(--airbnb-pink, #FF385C) 100%);
        color: white;
        border: none;
        border-radius: 50%;
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s ease;
        flex-shrink: 0;
    }

    .airbnb-search-button:hover {
        background: linear-gradient(135deg, var(--airbnb-dark-red, #E00007) 0%, #E31C5F 100%);
        transform: scale(1.04);
    }

    /* Mobile Search Button */
    .airbnb-mobile-search-btn {
        display: flex;
        align-items: center;
        gap: 12px;
        width: 100%;
        padding: 12px 16px;
        background: white;
        border: 1px solid var(--airbnb-border, #DDDDDD);
        border-radius: 40px;
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.08);
        margin-bottom: 16px;
    }

    .airbnb-mobile-search-btn:hover {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.12);
    }
</style>

<script>
    // Mobile menu toggle
    document.addEventListener('DOMContentLoaded', function () {
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const menuIcon = document.getElementById('menu-icon');

        mobileMenuButton.addEventListener('click', function (e) {
            e.stopPropagation();
            mobileMenu.classList.toggle('hidden');

            // Toggle icon
            if (mobileMenu.classList.contains('hidden')) {
                menuIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />';
            } else {
                menuIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />';
            }
        });

        // User dropdown toggle
        const userMenuButton = document.getElementById('user-menu-button');
        const userDropdown = document.getElementById('user-dropdown');

        if (userMenuButton) {
            userMenuButton.addEventListener('click', function (e) {
                e.stopPropagation();
                userDropdown.classList.toggle('hidden');
            });
        }

        // Close menus when clicking outside
        document.addEventListener('click', function (event) {
            if (!mobileMenu.contains(event.target) && !mobileMenuButton.contains(event.target)) {
                mobileMenu.classList.add('hidden');
                menuIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />';
            }

            if (userDropdown && !userDropdown.contains(event.target) && !userMenuButton.contains(event.target)) {
                userDropdown.classList.add('hidden');
            }
        });
    });
</script>